<?xml version="1.0" encoding="utf-8" ?>
<gui name="main">
    <variables>
        <var name="height">30</var>
    </variables>

    <elements>
        <aligner x="0" y="0" width="100vw" height="100vh" alignX="LEFT" alignY="TOP">
            <verticalLayout spacing="5">
                <horizontalLayout>
                    <button height="$VAR(height)">File</button>
                    <button height="$VAR(height)">Simulation</button>
                </horizontalLayout>
                <horizontalLayout>
                    <button height="$VAR(height)" id="input">Input</button>
                    <separator width="20"/>
                    <textLine height="$VAR(height)">repeat</textLine>
                    <input type="number" width="200" height="$VAR(height)" id="repeat">100</input>
                    <textLine height="$VAR(height)">times</textLine>
                    <separator width="20"/>
                    <button height="$VAR(height)" id="run">Run</button>
                </horizontalLayout>
            </verticalLayout>
        </aligner>
    </elements>
</gui>